{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "composer install --no-dev --no-interaction --prefer-dist && npm install --legacy-peer-deps",
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.4"
        },
        "api/test.php": {
            "runtime": "vercel-php@0.7.4"
        }
    },
    "routes": [
        {
            "src": "/test-debug",
            "dest": "api/test.php"
        },
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(css|js|images|favicon.ico)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "LOG_CHANNEL": "stderr",
        "VIEW_COMPILED_PATH": "/tmp/views"
    }
}